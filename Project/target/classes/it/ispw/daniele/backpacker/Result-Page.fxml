<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.daniele.backpacker.boundary.ResultController">
    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="TOP_CENTER">
            <StackPane>
                <Region style="-fx-background-image: url('itinerario.jpg'); -fx-background-size: 100% 100%;" StackPane.alignment="CENTER" />
                <Text stroke="WHITE" strokeType="OUTSIDE" strokeWidth="5.0" text="Backpacker">
                    <font>
                        <Font size="140.0" />
                    </font>
                    <StackPane.margin>
                        <Insets bottom="30.0" top="30.0" />
                    </StackPane.margin>
                </Text>
            </StackPane>
            <HBox alignment="CENTER" spacing="35.0" style="-fx-background-color: silver;">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <Label fx:id="LabelHome" onMouseClicked="#switchToHome" text="Home">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelResult" onMouseClicked="#switchToResult" text="Result" underline="true">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelProfile" onMouseClicked="#switchToProfile" text="Profile">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelLogin" onMouseClicked="#switchToLogin" text="Log in">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelSignUp" onMouseClicked="#switchToSignUp" text="Sign up">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Label>
                <ImageView fx:id="imageUndo" fitHeight="50.0" fitWidth="50.0" nodeOrientation="INHERIT" onMouseClicked="#undoScene" pickOnBounds="true" preserveRatio="true">
                    <viewport>
                        <Rectangle2D />
                    </viewport>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <Image url="@/annulla.png" />
                </ImageView>
            </HBox>
            <HBox alignment="TOP_CENTER" VBox.vgrow="SOMETIMES">
            <Label text="Search Results for : ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="Country = ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="Italia">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text=", City = ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="Roma">
               <font>
                   <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text=", Address = ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="via del Corso">
               <font>
                   <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text=", Restaurant = ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="Included">
               <font>
                   <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text=", Search radius = ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="5.2 km">
               <font>
                   <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <VBox.margin>
               <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </VBox.margin>
            </HBox>
            <VBox fx:id="vBoxResult" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </VBox.margin>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>
