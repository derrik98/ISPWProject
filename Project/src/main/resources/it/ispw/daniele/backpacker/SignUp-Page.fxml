<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.ispw.daniele.backpacker.SignUpController">

    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="TOP_CENTER">
            <StackPane>
                <Region style="-fx-background-image: url('itinerario.jpg'); -fx-background-size: 100% 100%;" StackPane.alignment="CENTER" />
                <Text stroke="WHITE" strokeType="OUTSIDE" strokeWidth="5.0" text="Backpacker">
                    <font>
                        <Font size="140.0" />
                    </font>
                    <StackPane.margin>
                        <Insets bottom="30.0" top="30.0" />
                    </StackPane.margin>
                </Text>
            </StackPane>
            <HBox alignment="CENTER" spacing="35.0" style="-fx-background-color: silver;">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <Label fx:id="LabelHome" onMouseClicked="#switchToHome" text="Home">
                    <font>
                        <Font size="40.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </Label>
                <Label fx:id="LabelResult" onMouseClicked="#switchToResult" text="Result">
                    <font>
                        <Font size="40.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </Label>
                <Label fx:id="LabelProfile" onMouseClicked="#switchToProfile" text="Profile">
                    <font>
                        <Font size="40.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </Label>
                <Label fx:id="LabelLogin" onMouseClicked="#switchToLogin" text="Log in">
                    <font>
                        <Font size="40.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </Label>
                <Label fx:id="LabelSignUp" onMouseClicked="#switchToSignUp" text="Sign up" underline="true">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <font>
                        <Font size="40.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Label>
                <ImageView fx:id="imageUndo" fitHeight="50.0" fitWidth="50.0" nodeOrientation="INHERIT"
                           onMouseClicked="#undoScene" pickOnBounds="true" preserveRatio="true">
                    <viewport>
                        <Rectangle2D/>
                    </viewport>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <Image url="@/annulla.png"/>
                </ImageView>
            </HBox>
            <VBox alignment="CENTER">
                <HBox alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="40.0"/>
                    </VBox.margin>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create Account: ">
                        <font>
                            <Font size="35.0"/>
                        </font>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Text>
                    <Label fx:id="genericUserSignUp" onMouseClicked="#switchToGenericUserSignUpPage"
                           text="Generic User" underline="true">
                        <font>
                            <Font size="27.0"/>
                        </font>
                        <HBox.margin>
                            <Insets left="30.0" right="30.0"/>
                        </HBox.margin>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Label>
                    <Label fx:id="restaurantOwnerSignUp"
                           onMouseClicked="#switchToRestaurantOwnerSignUpPage" text="Restaurant Owner">
                        <font>
                            <Font size="27.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Label>
                </HBox>
                <HBox alignment="CENTER" spacing="15.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <VBox alignment="CENTER" prefWidth="500.0">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </HBox.margin>
                        <HBox alignment="CENTER_RIGHT">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="E-mail:">
                                <font>
                                    <Font size="27.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets right="10.0"/>
                                </HBox.margin>
                            </Text>
                            <TextField fx:id="textFieldEmailSignUp">
                                <font>
                                    <Font size="20.0"/>
                                </font>
                            </TextField>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name:">
                                <font>
                                    <Font size="27.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets right="10.0"/>
                                </HBox.margin>
                            </Text>
                            <TextField fx:id="textFieldNameSignUp">
                                <font>
                                    <Font size="20.0"/>
                                </font>
                            </TextField>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Surname:">
                                <font>
                                    <Font size="27.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets right="10.0"/>
                                </HBox.margin>
                            </Text>
                            <TextField fx:id="textFieldSurnameSignUp">
                                <font>
                                    <Font size="20.0"/>
                                </font>
                            </TextField>
                        </HBox>
                    </VBox>
                    <Separator orientation="VERTICAL" HBox.hgrow="ALWAYS"/>
                    <VBox alignment="CENTER" prefWidth="500.0">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </HBox.margin>
                        <HBox alignment="CENTER_RIGHT">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password:">
                                <font>
                                    <Font size="27.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets right="10.0"/>
                                </HBox.margin>
                            </Text>
                            <PasswordField fx:id="textFieldPassSignUp">
                                <font>
                                    <Font size="20.0"/>
                                </font>
                            </PasswordField>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                  text="Confirm Password:">
                                <font>
                                    <Font size="27.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets right="10.0"/>
                                </HBox.margin>
                            </Text>
                            <PasswordField fx:id="textFieldConfPassSignUp">
                                <font>
                                    <Font size="20.0"/>
                                </font>
                            </PasswordField>
                        </HBox>
                    </VBox>
                </HBox>
                <Button fx:id="buttonSignUp" mnemonicParsing="false" onMouseClicked="#signUp"
                        text="Sign up">
                    <font>
                        <Font size="27.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="40.0" top="20.0"/>
                    </VBox.margin>
                </Button>

            </VBox>
            </VBox>
    </ScrollPane>
</AnchorPane>
