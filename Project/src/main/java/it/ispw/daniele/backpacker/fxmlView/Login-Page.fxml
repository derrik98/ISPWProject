<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="APLogin" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.daniele.backpacker.fxmlView.LoginController">

    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="TOP_CENTER">
            <StackPane>
                <Region style="-fx-background-image: url('itinerario.jpg'); -fx-background-size: 100% 100%;" StackPane.alignment="CENTER" />
                <Text stroke="WHITE" strokeType="OUTSIDE" strokeWidth="5.0" text="Backpacker">
                    <font>
                        <Font size="140.0" />
                    </font>
                    <StackPane.margin>
                        <Insets bottom="30.0" top="30.0" />
                    </StackPane.margin>
                </Text>
            </StackPane>
            <HBox alignment="CENTER" spacing="35.0" style="-fx-background-color: silver;">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <Label fx:id="LabelHome" onMouseClicked="#switchToHome" text="Home">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelResult" onMouseClicked="#switchToResult" text="Result">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelProfile" onMouseClicked="#switchToProfile" text="Profile">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelLogin" onMouseClicked="#switchToLogin" text="Log in" underline="true">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelSignUp" onMouseClicked="#switchToSignUp" text="Sign up">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Label>
                <ImageView fx:id="imageUndo" fitHeight="50.0" fitWidth="50.0" nodeOrientation="INHERIT" onMouseClicked="#undoScene" pickOnBounds="true" preserveRatio="true">
                    <viewport>
                        <Rectangle2D />
                    </viewport>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <Image url="@/annulla.png" />
                </ImageView>
            </HBox>
            <VBox alignment="CENTER" spacing="15.0">
                <HBox alignment="CENTER" spacing="20.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="100.0" />
                    </VBox.margin>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username/E-mail">
                        <font>
                            <Font size="27.0" />
                        </font>
                    </Text>
                    <TextField fx:id="textFieldUserLogin">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </TextField>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
                        <font>
                            <Font size="27.0" />
                        </font>
                    </Text>
                    <PasswordField fx:id="textFieldPassLogin">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </PasswordField>
                </HBox>
                <HBox alignment="CENTER">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                    <Button fx:id="ButtonLogin" mnemonicParsing="false" onMouseClicked="#login" text="Login">
                        <font>
                            <Font size="27.0" />
                        </font>
                    </Button>
                </HBox>
                <HBox alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </VBox.margin>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Or">
                        <font>
                            <Font size="25.0" />
                        </font>
                    </Text>
                </HBox>
                <HBox alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="40.0" />
                    </VBox.margin>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Log in with:">
                        <font>
                            <Font size="27.0" />
                        </font>
                    </Text>
                    <Button fx:id="buttonGoogleLogin" contentDisplay="RIGHT" mnemonicParsing="false" onMouseClicked="#googleLogin" text="Google">
                        <font>
                            <Font size="27.0" />
                        </font>
                        <HBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </HBox.margin>
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@/google.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="buttonFacebookLogin" contentDisplay="RIGHT" mnemonicParsing="false" onMouseClicked="#facebookLogin" text="Facebook">
                        <HBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </HBox.margin>
                        <font>
                            <Font size="27.0" />
                        </font>
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@/facebook.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
                </VBox>
        </ScrollPane>

</AnchorPane>
