<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.daniele.backpacker.fxmlView.ProfileController">
    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="TOP_CENTER">
            <HBox alignment="TOP_CENTER">
                <VBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </VBox.margin>
                <VBox>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <StackPane style="-fx-border-color: black;">
                        <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@/utente.png" />
                        </ImageView>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_RIGHT">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <Image url="@/modificare.png" />
                        </ImageView>
                    </StackPane>
               <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username: ">
                        <font>
                           <Font size="27.0" />
                        </font>
                     </Text>
                     <Label fx:id="username" text="null">
                        <font>
                           <Font size="27.0" />
                        </font>
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Label>
                  </children>
               </HBox>
               <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                  <children>
                          <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name: ">
                              <font>
                                  <Font size="27.0" />
                              </font>
                          </Text>
                     <Label fx:id="name">
                        <font>
                           <Font size="27.0" />
                        </font>
                     </Label>
                  </children>
               </HBox>
               <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                  <children>
                          <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Surname: ">
                              <font>
                                  <Font size="27.0" />
                              </font>
                          </Text>
                     <Label fx:id="surname">
                        <font>
                           <Font size="27.0" />
                        </font>
                     </Label>
                  </children>
               </HBox>
               <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                  <children>
                          <Text strokeType="OUTSIDE" strokeWidth="0.0" text="E-mail: ">
                              <font>
                                  <Font size="27.0" />
                              </font>
                          </Text>
                     <Label fx:id="email">
                        <font>
                           <Font size="27.0" />
                        </font>
                     </Label>
                  </children>
               </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <ImageView fx:id="imageSettings" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#switchToSettings" onMouseEntered="#showInfoSettings" onMouseExited="#notShowInfoSettings" onMouseMoved="#showInfoSettings" pickOnBounds="true" preserveRatio="true">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                            <Image url="@/impostazioni.png" />
                        </ImageView>
                        <Text fx:id="textSettings" strokeType="OUTSIDE" strokeWidth="0.0" text="Settings" visible="false">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Text>
                    </HBox>
                </VBox>
                <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Favourites Routes">
                        <VBox.margin>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </VBox.margin>
                        <font>
                            <Font size="27.0" />
                        </font>
                    </Text>
                    <VBox fx:id="vBoxProfile" alignment="TOP_CENTER" />
                </VBox>
            </HBox>
                </VBox>
        </ScrollPane>
</AnchorPane>
