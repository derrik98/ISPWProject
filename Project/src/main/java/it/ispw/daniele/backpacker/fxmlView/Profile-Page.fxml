<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.daniele.backpacker.fxmlView.ProfileController">
    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="TOP_CENTER">
            <StackPane>
                <Region style="-fx-background-image: url('itinerario.jpg'); -fx-background-size: 100% 100%;" StackPane.alignment="CENTER" />
                <Text stroke="WHITE" strokeType="OUTSIDE" strokeWidth="5.0" text="Backpacker">
                    <font>
                        <Font size="140.0" />
                    </font>
                    <StackPane.margin>
                        <Insets bottom="30.0" top="30.0" />
                    </StackPane.margin>
                </Text>
            </StackPane>
            <HBox alignment="CENTER" spacing="35.0" style="-fx-background-color: silver;">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <Label fx:id="LabelHome" onMouseClicked="#switchToHome" text="Home">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelResult" onMouseClicked="#switchToResult" text="Result">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelProfile" onMouseClicked="#switchToProfile" text="Profile" underline="true">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelLogin" onMouseClicked="#switchToLogin" text="Log in">
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="LabelSignUp" onMouseClicked="#switchToSignUp" text="Sign up">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <font>
                        <Font size="40.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Label>
                <ImageView fx:id="imageUndo" fitHeight="50.0" fitWidth="50.0" nodeOrientation="INHERIT" onMouseClicked="#undoScene" pickOnBounds="true" preserveRatio="true">
                    <viewport>
                        <Rectangle2D />
                    </viewport>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <Image url="@/annulla.png" />
                </ImageView>
            </HBox>
            <HBox alignment="TOP_CENTER">
                <VBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </VBox.margin>
                <VBox>
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                    <StackPane style="-fx-border-color: black;">
                        <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@/utente.png" />
                        </ImageView>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_RIGHT">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <Image url="@/modificare.png" />
                        </ImageView>
                    </StackPane>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name: ">
                        <font>
                            <Font size="27.0" />
                        </font>
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="40.0" />
                        </VBox.margin>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Surname: ">
                        <font>
                            <Font size="27.0" />
                        </font>
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="E-mail: ">
                        <font>
                            <Font size="27.0" />
                        </font>
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                    </Text>
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <ImageView fx:id="imageSettings" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#switchToSettings" onMouseEntered="#showInfoSettings" onMouseExited="#notShowInfoSettings" onMouseMoved="#showInfoSettings" pickOnBounds="true" preserveRatio="true">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                            <Image url="@/impostazioni.png" />
                        </ImageView>
                        <Text fx:id="textSettings" strokeType="OUTSIDE" strokeWidth="0.0" text="Settings" visible="false">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Text>
                    </HBox>
                </VBox>
                <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Favourites Routes">
                        <VBox.margin>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </VBox.margin>
                        <font>
                            <Font size="27.0" />
                        </font>
                    </Text>
                    <VBox fx:id="vBoxProfile" alignment="TOP_CENTER" />
                </VBox>
            </HBox>
                </VBox>
        </ScrollPane>
</AnchorPane>
